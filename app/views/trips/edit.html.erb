<div class="row" style="padding-top:4%;">
<div class="col"></div>
<div class="col-md-12 text-center">

<h1 class="text-white">Update Trip</h1><br>

<%= form_for @trip do |f| %>

<p class="text-white"><%= f.label :title %></p></p>
<%= f.text_field :title %><br><br>

<p class="text-white"><%= f.label :description %></p>
<%= f.text_field :description %><br><br>

<p class="text-white"><%= f.label :destination_id %></p>
<%= f.collection_select :destination_id, Destination.all, :id, :city %><br><br>

<p class="text-white"><%= f.label :departure_date %></p>
<%= f.text_field :departure_date %>
<br><br>

<%= f.submit "Update Trip", class:'btn btn-md btn-secondary' %>
<%end%>
