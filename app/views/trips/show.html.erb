
<%= button_to "My Trips", '/trips', method: :get%>

<h2><%= @trip.title %></h2>
<h5><%= @trip.description %></h5>
<br>

<p>Destination:</p>
<p><%= @trip.destination.city %></p>
<img src="<%= @trip.destination.image %>" alt="destination image" height=150 width=300>
<br>
<br>
<p>Departure Date:</p>
<p><%= @trip.reformat_date %></p><br>

<%= button_to 'Delete Trip', trip_path(@trip), method: :delete, data: {confirm: "Are you sure?"}%>
