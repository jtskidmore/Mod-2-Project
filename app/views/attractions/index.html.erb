<div class="col-md-7 text-center">

<h1>Attractions</h1><br>

<h3>Top Rated Attraction</h3><br>
<div class="card mb-3">
<img src="<%= Attraction.highest_rated_attraction.image%>" class ="card-img-top" style:"width:50%; height:30%", alt="most_popular_attraction_image">
<div class="card-body">
<h5 class="card-title"><%= link_to Attraction.highest_rated_attraction_name, attraction_path(Attraction.highest_rated_attraction) %></h4>
</div>
</div>

<div class="btn-group" role="group" aria-label="Basic example">
<%= button_to "My Trips", '/trips', class:"btn btn-md btn-secondary", method: :get%></button>
<%= button_to "Home", '/welcome', class:"btn btn-md btn-secondary", method: :get%></button>
</div><br><br>

<h3>All Attractions</h3>
<ul class="list-group list-group-flush">
<% @attractions.sort_alphabetically.each do |attr|%>
    <li class="list-group-item"><%= link_to attr.name, attraction_path(attr) %></li>
<%end%>
</ul>
<br>

