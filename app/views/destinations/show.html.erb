<div class="background">
<%= image_tag 'photo/logo2.png', style:"width:25%; height:10%" %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/welcome">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%if logged_in?%>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/trips">My Trips</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/destinations">Destinations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/attractions">Attractions</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/reviews">Reviews</a>
        </li>
    </ul>
    <span class="nav-item">
      <%= link_to "Logout", '/logout', method: :delete %>
    </span>
    <%else%>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/new">Sign Up</a>
        </li>
      </ul>
    <%end%>
</nav>


<div class="row" style="padding-top:4%;">
<div class="col"></div>
<div class="col-md-7 text-center">


<h1 class="text-white"><%= @destination.city %></h1><br>
<img src="<%= @destination.image %>" alt="city picture" width="600" height="300"><br><br>


<h3 class="text-white">Attractions</h3><br>

<table class="table table-hover" style="width:70%; margin-left:90px;">
<thead>
  <tr>
  <tr scope="col"><h5 class="text-white">Name</h5>
  </tr>
<% @destination.attractions.each do |attr|%>
<tbody>
  <tr>
  <td scope="row"><%= link_to attr.name, attraction_path(attr), {:style=>'color:lightgray; font-size:18px;', :class => "css_class"} %></td>
  </tr>
<%end%>
</tbody>
</table>
<br>

<%= button_to "Back to Destinations", '/destinations', class:'btn btn-md btn-secondary', method: :get%>
<br>
</div><!-- .col-md-7 -->
<div class="col"></div>
</div><!-- .row -->
