<div class="background">
<%= image_tag 'photo/logo2.png', style:"width:25%; height:10%" %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <a class="navbar-brand" href="/welcome">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <%if logged_in?%>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/trips">My Trips</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/destinations">Destinations</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/attractions">Attractions</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/reviews">Reviews</a>
        </li>
    </ul>
    <span class="nav-item">
      <%= link_to "Logout", '/logout', method: :delete %>
    </span>
    <%else%>
    <ul class="navbar-nav mr-auto">
        <li class="nav-item">
          <a class="nav-link" href="/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/users/new">Sign Up</a>
        </li>
      </ul>
    <%end%>
</nav>


<div class="row" style="padding-top:4%;">
<div class="col"></div>
<div class="col-md-7 text-center">

<h2 class="text-white"><%= @review.attraction.name %></h2>

<h4 class="text-white"><%= @review.title %></h4><br>

<h4 class="text-white">Rating: <%= @review.rating %>/5 Stars</h4>

<p class="text-white"><%= @review.comments %></p>

<p  class="text-white">User: <%= @review.user.first_name%> <%= @review.user.last_name%></p>

<br><%= button_to "Edit", edit_review_path(@review.id), class:"btn btn-md btn-secondary", method: :get%>
<br>
</div><!-- .col-md-7 -->
<div class="col"></div>
</div><!-- .row -->
