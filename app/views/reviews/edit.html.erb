<div class="row" style="padding-top:10%;">
<div class="col"></div>
<div class="col-md-7 text-center">

<h1>Create Review</h1><br>

<%= form_for @review do |f| %>

<%= f.label :attraction_id %>
<%= f.collection_select :attraction_id, Attraction.all, :id, :name %>
<br>
<br>
<%= f.label :title %>
<%= f.text_field :title %>
<br>
<br>
<%= f.label :rating %>
<%= f.select :rating, options_for_select(1..5) %>
<br>
<br>
<%= f.label :comments %>
<%= f.text_area :comments %>
<br>
<br>
<%= f.submit "Submit Review", class:"btn btn-md btn-secondary" %>
<%end%><br>
<%= button_to "Home", '/welcome', class:'btn btn-md btn-secondary', method: :get %>
</div><!-- .col-md-7 -->
