<div class="row" style="padding-top:10%;">
<div class="col"></div>
<div class="col-md-7 text-center">

<h1>Login</h1><br><br>
   <%= form_tag '/login' do %>
   <%= label_tag :username%><br>
   <%= text_field_tag :username %><br><br>
   <%= label_tag :password%><br>
   <%= password_field_tag :password%><br><br>
   <%= submit_tag "Login", class:'btn btn-md btn-secondary'%>
<%end%>
<br>
<%= button_to "Home", '/welcome', class:'btn btn-md btn-secondary', method: :get%>

</div><!-- .col-md-7 -->
<div class="col"></div>
</div><!-- .row -->