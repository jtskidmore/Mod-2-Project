<div class="row" style="padding-top:5%;">
<div class="col"></div>
<div class="col-md-7 text-center">
<%= image_tag 'https://images.unsplash.com/photo-1468386150076-13c9d6fff68b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1500&q=80', style:"width:100%; height:30%" %>

<h1>Trip Tracker</h1>
<br>
<br>

<% if logged_in? %>
  <h3>You are Logged In, <%= current_user.first_name %></h3>
  <h3><%= current_user.welcome_message %></h3>

  <br>
  <%= button_to "My Trips", '/trips', class:'btn btn-md btn-secondary', method: :get%>
  <br>
  <%= button_to "Destinations", '/destinations', class:'btn btn-md btn-secondary', method: :get%>
  <br>
  <%= button_to "Attractions", '/attractions', class:'btn btn-md btn-secondary', method: :get%>
  <br>
  <%= button_to "My Reviews", '/reviews', class:'btn btn-md btn-secondary', method: :get%>
  <br>
  <%= button_to "Logout", '/logout', class:'btn btn-md btn-secondary', method: :delete%>

  <%else%>
  <%= button_to "Login", '/login', class:'btn btn-md btn-secondary', method: :get%>
  <br>
  <%= button_to "Sign Up", '/users/new', class:'btn btn-md btn-secondary', method: :get%>
  <br>
<%end%>

</div><!-- .col-md-7 -->
<div class="col"></div>
</div><!-- .row -->
