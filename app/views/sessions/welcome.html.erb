

<h1>Trip Tracker</h1>

<% if logged_in? %>
  <h3>You are Logged In, <%= current_user.first_name %></h3>
  <h3><%= current_user.welcome_message %></h3>
  <br>
  <%= button_to "Logout", '/logout', method: :delete%>
  <br>
  <%= button_to "My Trips", '/trips', method: :get%>
  <br>
  <%= button_to "Destinations", '/destinations', method: :get%>
  <br>
  <%= button_to "Attractions", '/attractions', method: :get%>
  <%else%>
  <%= button_to "Login", '/login', method: :get%>
  <br>
  <%= button_to "Sign Up", '/users/new', method: :get%>
  <br>
<%end%>
